@{
    ViewBag.Title = "Habits";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Habits User Interface</h2>

<section id="HabitInputs">
    <header>
        <h1>Create/Edit/Delete Habit</h1>
    </header>
    <div>
        <label for="f1">HabitId</label>
        <input id="f1" type="number" data-field="habitid" />
    </div>

    <div>
        <label for="f2">UserId</label>
        <input id="f2" type="number" data-field="userid" />
    </div>

    <div>
        <label for="f3">Importance</label>
        <input id="f3" type="number" data-field="importance" />
    </div>

    <div>
        <label for="f4">Title</label>
        <input id="f4" type="text" data-field="title" />
    </div>

    <div>
        <label for="f5">Details</label>
        <input id="f5" type="text" data-field="details" />
    </div>

    <div>
        <label for="save">Create/Update</label>
        <button id="save">Save</button>
    </div>

    <div style="font-size: 0.8em; opacity: 0.7; margin-top: 50px;">
        <label for="delete">Delete this Item</label>
        <button id="delete">Delete</button>
    </div>

</section>

<div id="status">Initializing</div>

<section>
    <header>
        <h1>Existing Habits</h1>
    </header>
    <ul id="existingHabitsList">
        <li>(List Initializing)</li>
    </ul>
</section>


@section PageHeadSection {
    <link rel="stylesheet" href="/content/css/base.css" />
}
@section PageJavaScript {
    <script src="/content/javascript/uihabit.js"></script>
}