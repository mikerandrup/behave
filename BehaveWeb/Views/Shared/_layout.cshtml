@{
    ViewBag.Title = "Behave Web Application";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <style>
        body {
            font-family: Helvetica, Arial, sans-serif;
            position: relative;
        }

        nav li {
            list-style-type: none;
            display: inline;
            padding: 10px;
        }

        #status {
            background-color: #e0e0e0;
            font-weight: bold;
            position: absolute;
            z-index: 100;
            top: 0;
            right: 0;
            padding: 15px;
            border-radius: 10px;
        }
    </style>

    @RenderSection("PageHeadSection", required: false)
</head>
<body>
    <section>
        @RenderBody()
    </section>

    <footer>
        <nav>
            <ul>
                <li><a href="/ui">Main</a></li>
                <li><a href="/ui/users">Users</a></li>
                <li><a href="/ui/habits">Habits</a></li>
                <li><a href="/ui/occurrences">Occurrences</a></li>
            </ul>
        </nav>
    </footer>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
    @RenderSection("PageJavaScript", required: false)
</body>
</html>
